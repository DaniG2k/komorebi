<% title t('.title')%>
<h1><%= t('.title') %></h1>

<%= link_to t(:new_room, scope: :rooms), new_room_path %>

<% if @rooms.size >= 3 %>
<div class="row">
  <% (0..2).each do |i| %>
  <div class="span4">
    <%= link_to room_path(@rooms[i]) do %>
      <figure class="tint">
       <%= image_tag @rooms[i].room_images.first.url(:thumb), :alt => "Room near zone #{@rooms[i].zone}" %>
       <h2><span><%= @rooms[i].closest_station %> Â£<%= @rooms[i].price %></span></h2>
      </figure>
    <% end %>
  </div>
  <% end %>
</div>
<% end %>

<% if @rooms.size >= 5 %>
<div class="row">
  <div class="span8">
    <%= link_to room_path(@rooms[3]) do %>
      <figure class="tint"><%= image_tag @rooms[3].room_images.first.url %></figure>
    <% end %>
  </div>
  <div class="span4">
    <%= link_to room_path(@rooms[4]) do %>
      <figure class="tint"><%= image_tag @rooms[4].room_images.first.url :thumb %></figure>
    <% end %>
  </div>
</div>
<% end %>

<% if @rooms.size >= 7 %>
<div class="row">
  <div class="span4">
    <%= link_to room_path(@rooms[5]) do %>
    <figure class="tint"><%= image_tag @rooms[5].room_images.first.url :thumb %></figure>
    <% end %>
  </div>
  <div class="span8">
    <%= link_to room_path(@rooms[5]) do %>
      <figure class="tint"><%= image_tag @rooms[6].room_images.first.url %></figure>
    <% end %>
  </div>
</div>
<% end %>

<% if @rooms.size >= 10 %>
<div class="row">
  <% (7..9).each do |i| %>
  <div class="span4">
    <%= image_tag @rooms[i].room_images.first.url(:thumb) %>
  </div>
  <% end %>
</div>
<% end %>
