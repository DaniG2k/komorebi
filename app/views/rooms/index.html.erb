<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Deposit</th>
      <th>Internet</th>
      <th>Furnished</th>
      <th>Smoking</th>
      <th>Gender</th>
      <th>Closest station</th>
      <th>Zone</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.price %></td>
        <td><%= room.deposit %></td>
        <td><%= room.internet %></td>
        <td><%= room.furnished %></td>
        <td><%= room.smoking %></td>
        <td><%= room.gender %></td>
        <td><%= room.closest_station %></td>
        <td><%= room.zone %></td>
        <td><%= room.description %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

